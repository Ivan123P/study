<%- include layouts/header.ejs %>
<form method="post" action="/customers/edit/<%= data[0].id %>">
  <div class="form-group">
    <label for="exampleInput1">Имя</label>
    <input class="form-control" id="exampleInput1" name="name" type="text" placeholder="Имя" value="<%= data[0].name %>" required>
  </div>
  <div class="form-group">
    <label for="exampleInput2">Адресс</label>
    <textarea class="form-control" id="exampleInput2" name="address" rows="3" cols="30" placeholder="Введите Ваш адресс" required><%= data[0].address %></textarea>
  </div>
  <div class="form-group">
    <label for="exampleInput3">Email</label>
    <input class="form-control" id="exampleInput3" name="email" type="email" placeholder="Email" value="<%= data[0].email %>" required>
  </div>
  <div class="form-group">
    <label for="exampleInput4">Телефон</label>
    <input class="form-control" id="exampleInput4" name="phone" type="phone" placeholder="Телефон" value="<%= data[0].phone %>" required>
  </div>
  <button class="btn btn-default" type="submit" name="submit" value="Save">Добавить</button>
  <button class="btn btn-default" type="submit" name="cancel" value="Cancel" onClick="window.location.href = '/customers';">Отмена</button>
</form>
<%- include layouts/footer.ejs %>